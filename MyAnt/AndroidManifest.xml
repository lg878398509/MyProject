<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.longlong.myant"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="cn.longlong.myant.ui.SplashActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="cn.longlong.myant.ui.MainActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
        <activity android:name="cn.longlong.myant.ui.SettingActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
		<activity android:name="cn.longlong.myant.ui.HelpActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
		<activity android:name="cn.longlong.myant.ui.LevelActivity" android:label="@string/app_name" android:screenOrientation="portrait"/>
		
    </application>

</manifest>
