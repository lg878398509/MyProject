<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_marginTop="20dip"
        android:background="@drawable/mymy"
        android:contentDescription="@string/ll_splash_tv" />

    <LinearLayout
        android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dip"
        android:paddingRight="40dip" >

        <ImageView
            android:id="@+id/start_btn"
            android:layout_width="fill_parent"
            android:layout_height="60sp" 
            android:src="@drawable/start_btn"
            android:contentDescription="@string/ll_splash_tv"/>
	
        <LinearLayout 
            android:layout_width="fill_parent"
			android:layout_height="10dp" 
			android:background="@drawable/split_line"/>
        
        <ImageView
            android:id="@+id/help_btn"
            android:layout_width="fill_parent"
            android:layout_height="60sp" 
            android:src="@drawable/help_btn"
            android:contentDescription="@string/ll_splash_tv"/>

        <LinearLayout 
            android:layout_width="fill_parent"
			android:layout_height="10dp" 
			android:background="@drawable/split_line"/>
        
        <ImageView
            android:id="@+id/setting_btn"
            android:layout_width="fill_parent"
            android:layout_height="60sp" 
            android:src="@drawable/setting_btn"
            android:contentDescription="@string/ll_splash_tv"/>

        <LinearLayout 
            android:layout_width="fill_parent"
			android:layout_height="10dp" 
			android:background="@drawable/split_line"/>
        
        <ImageView
            android:id="@+id/exit_btn"
            android:layout_width="fill_parent"
            android:layout_height="60sp" 
            android:src="@drawable/exit_btn"
            android:contentDescription="@string/ll_splash_tv"/>

       <LinearLayout 
            android:layout_width="fill_parent"
			android:layout_height="10dp" 
			android:background="@drawable/split_line"/>
       
       
    </LinearLayout>
    
    <ImageButton 
        android:id="@+id/about_btn"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true" 
		android:layout_width="40dp"
		android:layout_height="40dp" 
		android:background="@drawable/about_btn" 
		android:contentDescription="@string/ll_splash_tv"/>

</RelativeLayout>